page {
  background: #f9f9f9;
}

.list {
  padding: 0 30rpx;
  height: 192rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e1e1e1;
  background: #fff;
}

.date{
  line-height: 50rpx;
  color: #222;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #e1e1e1;
  font-size: 28rpx;
  background: #eee
}

.left {
  width: 30.2rpx;
  height: 30.2rpx;
  border: 2rpx solid #cecece;
  border-radius: 50%;
  display: flex;
  align-items: center;
}

 

.left image {
  border-radius: 50%;
  width: 34.2rpx;
  height: 34.2rpx;
  display: none;
}

.select {
  height: 34.2rpx;
  width: 34.2rpx;
  border: none;
}

.select image {
  display: block;
}
.lefts{
  border: none;
  width: 0;
  transition: width 0.1s linear;
}

.carimg {
  width: 183rpx;
  height: 138rpx;
  margin: 0 30rpx;
}

.right {
  flex: 1;
  line-height: 1.6;
}

.title {
  font-size: 27.6rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.klm {
  font-size: 21.6rpx;
  color: #999;
}

.klm text{
  margin: 0 5rpx;
}

.heart image {
  width: 30.6rpx;
  height: 26.4rpx;
}

.moneyBox {
  display: flex;
}

.money {
  flex: 1;
  color: #dc0000;
  font-size: 30rpx;
  font-weight: bold;
}

.wrap {
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
}

.listBox {
  flex: 1;
  overflow-y: scroll;
}

.bottom {
  display: flex;
}

.allselect {
  height: 90rpx;
  border-top: 1rpx solid #e1e1e1;
  display: flex;
  align-items: center;
  text-align: center;
  padding: 0 30rpx;
  color: #666;
  font-size: 25.8rpx;
  background: #fff;
}

.allselect .left {
  margin-right: 10rpx;
}
.del{
  flex: 1;
  background: #dc0000;
  color: #fff;
  font-size: 28.8rpx;
  line-height: 90rpx;
  text-align: center
}
.edit{
  flex: 1;
  background: #fff;
  color: #333;
  font-size: 28.8rpx;
  line-height: 90rpx;
  text-align: center;
  border-top: 1rpx solid #e1e1e1;
}

.cancel{
  width: 20%;
  line-height: 90rpx;
  color: #333;
  font-size: 24rpx;
  text-align: center;
  border-top: 1rpx solid #e1e1e1;
}

.msgs {
  position: fixed;
  width: 60%;
  background: #000;
  opacity: 0.9;
  color: #fff;
  line-height: 60rpx;
  align-items: center;
  font-size: 30rpx;
  text-align: center;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  border-radius: 9rpx;
  z-index: 3;
  -webkit-animation: linear 2s msg forwards;
  padding: 20rpx;
}

@keyframes msg {
  from {
    opacity: 0.9;
  }

  50% {
    opacity: 0.9;
  }

  to {
    opacity: 0;
  }
}

.detail{
  padding:0 0 20rpx 90rpx;
  border-bottom: 1rpx solid #e1e1e1;
  background: #fff;
  margin-top: -10rpx;
}

.bml{
  padding-left: 60rpx;
  transition: padding 0.1s linear;
}

.key{
  font-size: 25.8rpx;
  color: #666;
  line-height: 50rpx;
  display: inline-block;
}
.value{
  font-size: 25.8rpx;
  color: #333;
  line-height: 50rpx;
  display: inline-block;
  margin-left: 18rpx;
}

.noCar{
  text-align: center;
  line-height: 300rpx;
  color: #333;
  font-size: 30rpx;
}