.imgWrap{
background: #fff;
padding-top:36rpx; 
}

.msg{
  color: #333;
  font-size: 27rpx;
  line-height: 1;
  margin: 0 0 55rpx;
  padding: 0 34.2rpx;
}
.imgBox{
  display: flex;
  padding: 0 34.2rpx 27.8rpx;
flex-wrap: wrap;
}

.imgList{
  width: 149rpx;
  height: 149rpx;
  position: relative;
  margin: 0 28rpx 28rpx 0;
}

.imgList:nth-of-type(4n){
  margin-right: 0;
}

.btn-up{
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 28rpx;
  background: #f6f6f6;
  box-sizing: border-box;
  border:1rpx solid #e1e1e1;
  padding:26rpx; 
  border-radius: 6rpx;

}

.center{
  height: 100%;
  border:2.4rpx dashed #cdcdcd;
  border-radius: 6rpx;
  position: relative;

}

.center::after,
.center::before{ 
  content:"" ;
  width: 30rpx;
  height: 3rpx;
  background: #dcdcdc;
  top: 50%;
  left: 50%;
  margin-left: -15rpx;
  border-radius: 6rpx;
  position: absolute;
}

.center::before{
  -webkit-transform: rotate(90deg)
}


.imgList image{
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.icon-close{
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  right: 0;
  top: 0;
  border-bottom-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
  background: rgba(0, 0, 0, 0.3);
}
.icon-close:after,
.icon-close::before{
  content:"" ;
  width: 24rpx;
  height: 4rpx;
  background: #e5e3e4;
  top: 16rpx;
  left: 6rpx;
  border-radius: 6rpx;
  position: absolute;
}
.icon-close:after{
  -webkit-transform: rotate(45deg);
}

.icon-close:before{
  -webkit-transform: rotate(-45deg);
}


