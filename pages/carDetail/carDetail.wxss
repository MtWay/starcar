/*顶部的弹框  */

.model-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.model-top {
  position: fixed;
  top: -100%;
  left: 0;
  width: 100%;
  /* height: 586.2rpx; */
  box-sizing: border-box;
  padding: 34.2rpx 25.2rpx 66rpx;
  background: #fff;
}

.top {
  height: 66rpx;
  line-height: 66rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  position: relative;
}

.top::after {
  content: "";
  position: absolute;
  width: 50.4rpx;
  height: 2.4rpx;
  background: #333;
  left: 50%;
  margin-left: -25.2rpx;
  bottom: 0;
}

.close {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 5.2rpx;
  top: 15rpx;
}

.close::after, .close::before {
  content: "";
  position: absolute;
  width: 38.2rpx;
  height: 3rpx;
  background: #d0d0d0;
  -webkit-transform: rotate(45deg);
  right: 0;
  top: 50%;
}

.close::after {
  -webkit-transform: rotate(-45deg);
}

