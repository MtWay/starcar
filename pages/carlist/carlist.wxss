/* pages/findcar/findcar.wxss */
page{
  height: 100%
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f9f9f9;
}

/*搜索框的样式*/

.searchType {
  background-color: #dc0000;
  flex-direction: row;
  display: flex;
  height: 90rpx;
  align-items: center;
  justify-content: center;
}

/*输入框整体样式*/

.inputStyle {
  height: 58rpx;
  display: flex;
  /* flex: 1; */
  align-items: center;
  justify-content: center;
  flex-direction: row;
  /* border-radius: 12rpx 12rpx 12rpx 12rpx; *//* border:  1px solid #f6f6f6; */
  background-color: #fff;
  border-radius: 30rpx;
  width: 85.6%;
  color: #dcdcdc;
}

.searchText {
  font-size: 12px;
  color: #ccc;
  margin-left: 5px;
}

/*搜索框的图片*/

.sousuoimg {
  width: 14px;
  height: 14px;
}

/*头部样式*/

.topstyle {
  height: 65rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e1e1e1;
  display: flex;
  flex-direction: row;
  color: #333;
  font-size: 12px;
  align-items: center;
}

.itemSelectType {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex: 1;
  text-align: center;
  position: relative;
  height: 65rpx;
  line-height: 65rpx;
}

/*倒三角样式*/

.triangle {
  width: 0;
  display: inline-block;
  margin-left: 3px;
  /* margin-top: 5px; */
  transition: all 0.2s linear;
  -webkit-transform-origin: 50% 25%;
  border: 10rpx solid transparent;
  border-top-color: #d5d5d5;
  position: relative;
  top: 7rpx;
}

/*选中*/

.select {
  color: #d80100;
}

.select .triangle {
  border-top-color: #d80100;
  -webkit-transform: rotate(180deg);
}

.listBox{
  flex: 1;
  overflow-y: scroll;
}

.hide{
  display: none
}

/*弹框*/

.model {
  /* position: absolute; */
  display: none;
  z-index: 5;
  top: 156rpx;
  background: #fff;
  -webkit-transform: translateY(100%);
  flex:1;
  overflow-y: scroll
}

.showmodel {
  display: block;
  -webkit-transform: translateY(0%);
  transition: -webkit-transform 0.2s linear;
}

.otherRight {
  flex: 1;
  text-align: right;
  position: relative;
  color: #ccc;
  padding-right: 20px;
}

.otherRight::after {
  content: "";
  display: block;
  position: absolute;
  width: 10px;
  height: 10px;
  border: 1px solid #ccc;
  border-bottom-color: transparent;
  border-left-color: transparent;
  right: 0;
  top: 0;
  -webkit-transform: rotate(45deg);
}

.custom {
  color: #999;
  font-size: 14px;
  line-height: 80rpx;
  height: 80rpx;
  padding:0 15px; 
  border-bottom: 1rpx solid #e1e1e1;
}

.custom input {
  display: inline-block;
  width: 60rpx;
  background: #f6f6f6;
  border: 1rpx solid #eaeaea;
  text-align: center;
  color: #333;
  margin: 0 10rpx;
  vertical-align: middle;
}

.confirm {
  display: inline-block;
  width: 100rpx;
  background: #f6f6f6;
  border: 1rpx solid #eaeaea;
  text-align: center;
  color: #dc0000;
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: middle;
  float: right;
  margin-top: 10rpx;
  border-radius: 2rpx;
}

.btnBox{
position:absolute;
bottom: 0;
width: 100%
}

.btn{
  width: 50%;
  float: left;
  background: #dc0000;
  color: #fff;
  text-align: center;
  border-radius: 0;
  border: none;
  position: relative;
  font-size: 18px;
  line-height: 2.55555556;
}

.raset::after{position:absolute;
  content: "";
  width: 1rpx;
  height: 100%;
  right: 0;
  top: 0;
  background: #fff;
 }

/*竖线样式*/

.line {
  position: absolute;
  width: 1rpx;
  height: 25rpx;
  border-right: 1rpx solid #e1e1e1;
  right: 2rpx;
  top: 20rpx;
}

/*排序点击后的选择item*/

.paixuitem {
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e1e1e1;
  color: #333;
  font-size: 12px;
  align-items: center;
  display: flex;
  padding: 0 15px;
}

.keyitem {
  height: 25px;
  background-color: #f6f6f6;
  border-bottom: 1px solid #e1e1e1;
  color: #333;
  font-size: 11px;
  align-items: center;
  display: flex;
  padding-left: 15px;
}

/*车辆列表页*/

.itemcontainer {
  /* height: 220rpx; *//* display: flex;  *//* flex-direction: row; *//* width: 100%; */
  padding: 40rpx 25rpx 30rpx;
  margin-top: 18rpx;
  border-top: 1rpx solid #e1e1e1;
  border-bottom: 1rpx solid #e1e1e1;
  font-size: 18rpx;
  background: #fff;
}

.self{
  width: 50.4rpx;
  height: 51.6rpx;
  position: absolute;
  right: 15rpx;
  top: 0;
  z-index: 3;
}


/*左边的样式*/

.itemLeftStyle {
  position: relative;
  height: 337rpx;
  overflow: hidden;
}

/*图片style*/

.itemImageStyle {
  width: 100%;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
}

/*已过期*/

.guoqi {
  width: 248rpx;
  height: 210rpx;
  position: absolute;
  left: 15px;
}

.guoqitext {
  position: absolute;
  font-size: 10px;
  color: white;
  left: 40rpx;
  top: 28rpx;
}

/*右边的样式*/

.itemRightStyle {
  flex-direction: column;
  margin-left: 10px;
  margin-right: 10px;
  /* height: 160rpx; */
  margin-top: 18rpx;
  flex: 1;
  display: flex;
  position: relative;
}

/*右边品牌的样式*/

.itemBrandTitle {
  color: #555;
  font-size: 30rpx;
  font-weight: bold;
  min-height: 76rpx;
  line-height: 38rpx;
  /* display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; */
}

/*右边地区和里程*/

.areaAndMileage {
  color: #999;
  font-size: 20rpx;
  margin-top: 14rpx;
}

/*右边的发布时间*/

.publishdata {
  color: #666;
  font-size: 11px;
  position: absolute;
  bottom: -8px;
  right: 10px;
}

/*右边的价格*/

.pricestyle {
  color: #f60;
  margin-top: 9rpx;
