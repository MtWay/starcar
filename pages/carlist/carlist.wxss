}

/*底部的加载更多动画*/

.tips {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.tips image {
  width: 25px;
  height: 25px;
}

.loadmoreText {
  font-size: 12px;
  color: #333;
  margin-left: 10px;
}

/*品牌logo*/

.logostyle {
  width: 25px;
  height: 25px;
}

.brandtitle {
  margin-left: 12px;
}

.tuiguang {
  font-size: 11px;
  color: #999;
  position: absolute;
  bottom: 17px;
  right: 10px;
  border: 1rpx solid #e1e1e1;
  width: 110rpx;
  height: 38rpx;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.areaRight {
  float: right;
}

.pricestyle {
  position: absolute;
  right: 0;
  bottom: 0;
  background: -webkit-linear-gradient(left, rgba(21, 21, 21, 0), rgba(21, 21, 21, 0.8));
  height: 79.8rpx;
  line-height: 79.8rpx;
  color: #fff;
  padding: 0 20rpx;
}

/* 我要卖车 */
.publishcar{
  box-sizing: border-box;
  padding: 20rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 33rpx;
  font-size: 30rpx;
  background: -webkit-linear-gradient(left , #f00, #d80100);
  box-shadow: 0 0 5rpx 3rpx #d80100;
  color: #fff;
  position: fixed;
  z-index: 4;
  right: 20rpx;
  bottom: 100rpx;
  border-radius:50%; 
  text-align: center
}

.publishcar image{
width: 36rpx;
}

.bgray{
  color: #999;
}

.msgs {
  position: fixed;
  width: 60%;
  background: #000;
  opacity: 0.9;
  color: #fff;
  line-height: 60rpx;
  align-items: center;
  font-size: 30rpx;
  text-align: center;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  border-radius: 9rpx;
  z-index: 3;
  -webkit-animation: linear 2s msg forwards;
  padding: 20rpx;
}

@keyframes msg {
  from {
    opacity: 0.9;
  }

  50% {
    opacity: 0.9;
  }

  to {
    opacity: 0;
  }
}