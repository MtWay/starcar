page{
  background: #f9f9f9;
}

.top {
  padding: 74rpx 43.2rpx 45rpx;
  background: #dc0000;
}

.head {
  position: relative;
  margin-right: 25rpx;
  float: left;
  height: 118.8rpx;
  width: 118.8rpx;
  display: flex;
  align-items: center;
  
}

.head image {
   width: 118.8rpx; 
    height: 118.8rpx;  
  border-radius: 50%;
}

.head .gold{
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  bottom: -6rpx;
  right: 6rpx;
  
}

.wrap{
  overflow: hidden;
}

.name{color: #fff;
  font-size: 36rpx;
}
.vipbox{
  width:171rpx ;
  height: 44rpx;
  line-height: 44rpx;
  box-sizing: border-box;
  color: #666;
  font-size: 24rpx;
  padding:  0 18rpx;
  background: #fff;
  border-radius: 22rpx;
  margin-top: 18rpx;
}

.vipbox image{
  width: 24rpx;
  height: 20rpx;
}

.box{
  padding-left:25.2rpx ;
  margin-bottom: 18rpx;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  background: #fff;
}

.notop{
  border-top: none;
}
.list{
  height:  100rpx;
  line-height: 100rpx;
  color: #333;
  font-size: 27rpx;
  display: flex;
  align-items: center;
}

.right::after{
  content: "";
   position: absolute; 
  width: 20rpx;
  height: 20rpx;
  border-right: 2rpx solid #ccc;
  border-top: 2rpx solid #ccc;
  -webkit-transform: rotate(45deg);
  right: 20rpx;
  top: 50%;
  margin-top: -14rpx;
}

.list image{
  width: 32.4rpx;
  margin-right: 19.2rpx;
}
.right{
   position: relative; 
flex: 1;
border-bottom: 1rpx solid #eaeaea;
}